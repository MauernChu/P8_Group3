<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/brown">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/menu_bar">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pictureBox"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@color/mustard">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:adjustViewBounds="false"
            android:background="@color/mustard"
            android:cropToPadding="false"
            android:visibility="visible"
            app:srcCompat="@drawable/monkey_color" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="21dp"
            android:layout_toEndOf="@+id/imageButton"
            android:fontFamily="sans-serif"
            android:text="@string/name"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/children"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/name"
            android:layout_below="@+id/name"
            android:fontFamily="sans-serif"
            android:text="@string/children"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/age"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_below="@+id/children"
            android:layout_alignStart="@+id/children" />

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/age"
            android:layout_below="@+id/age"
            android:text="@string/city"
            android:textSize="18sp"
            android:textColor="@color/black"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/aboutProfile"
        android:layout_width="350dp"
        android:layout_height="125dp"
        android:layout_marginTop="18dp"
        android:background="@color/mustard"
        android:layout_below="@+id/pictureBox"
        android:layout_alignStart="@+id/pictureBox">

        <TextView
            android:id="@+id/languages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:text="@string/languages"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/allLanguages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/english_german_spanish"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_alignBaseline="@+id/languages"
            android:layout_alignBottom="@+id/languages"
            android:layout_toEndOf="@+id/languages"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="@string/about"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/languages" />

        <TextView
            android:id="@+id/textAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="@string/i_am_active_and_i_like_to_socialise"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_below="@+id/about"
            android:layout_alignStart="@+id/about" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="125dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/aboutProfile"
        android:layout_alignStart="@+id/aboutProfile"
        android:background="@color/mustard"
        android:id="@+id/relativeLayout2">

        <TextView
            android:id="@+id/hobbies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hobbies"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="34dp"
        app:srcCompat="@android:drawable/sym_def_app_icon"
        android:layout_alignBottom="@+id/relativeLayout2"
        android:layout_alignStart="@+id/relativeLayout2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        app:srcCompat="@drawable/monkey"
        android:layout_alignTop="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/imageView2"
        app:srcCompat="@android:drawable/star_on" />

</RelativeLayout>